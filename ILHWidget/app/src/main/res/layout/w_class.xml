<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/widget_margin" android:background="#09C"
    tools:showIn="@layout/w_class_info">

    <TextView android:id="@+id/appwidget_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appwidget_text"
        android:textColor="#ffffff" android:textSize="12sp" android:textStyle="bold|italic"
        android:contentDescription="@string/appwidget_text"
        android:background="#09C"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textAlignment="center"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/MemT"
        android:layout_marginStart="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/MemT"
        android:layout_below="@+id/appwidget_text"
        android:layout_centerHorizontal="true"
        android:textSize="12sp" />
    <!-- ListView to be shown on widget -->

    <!-- Empty view is show if list items are empty -->
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/empty_string"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="כותרת"
        android:id="@+id/Tview"
        android:enabled="true"
        android:textStyle="normal"
        android:textSize="10sp"
        android:typeface="normal"
        android:singleLine="false"
        android:lines="4"
        android:layout_below="@+id/VButton"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="nrg"
        android:id="@+id/Tnview"
        android:enabled="true"
        android:textStyle="normal"
        android:textSize="10sp"
        android:typeface="normal"
        android:singleLine="false"
        android:lines="4"
        android:layout_below="@+id/Tview"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="ספורט"
        android:id="@+id/Tsview"
        android:enabled="true"
        android:textStyle="normal"
        android:textSize="10sp"
        android:typeface="normal"
        android:singleLine="false"
        android:lines="4"
        android:layout_below="@+id/Tnview"
        android:layout_alignParentStart="true" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שמע"
        android:id="@+id/VButton"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="פנס"
        android:id="@+id/FButton"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/VButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="עדכן"
        android:id="@+id/UButton"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/FButton" />


</RelativeLayout>